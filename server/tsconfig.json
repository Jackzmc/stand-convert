{
  "compilerOptions": {
    "module": "esnext",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "allowJs": true,
    "paths": {
        "*": [
            "node_modules/*",
            "src/types/*"
        ]
    },
    "types": ["node"],
    "resolveJsonModule": true,
    "lib": ["es2021"],
    "incremental": true
  },
  "include": [
    "src/**/*.ts",
    "./package.json",
  ],
  "exclude": [
    "node_modules"
  ],
  "baseUrl": "."
}